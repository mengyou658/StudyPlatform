# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    @controllers.Application.helloUser
GET        /link-result        @controllers.Application.linkResult
GET        /helloUser           @controllers.Application.helloUser
GET        /current-user        @controllers.Application.currentUser

GET        /custom/login        @controllers.CustomLoginController.login
GET        /custom/logout       @controllers.CustomLoginController.logout

# Registration authentication
GET         /login               controllers.Authentication.login
POST        /login               controllers.Authentication.loginSubmit
GET         /registration        controllers.Authentication.registration
POST        /registration        controllers.Authentication.registerSubmit
GET         /logout              controllers.Authentication.logout

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

->          /auth                securesocial.Routes

    